<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"></solid>
            <corners android:radius="50dp"></corners>
            <stroke android:width="1dp" android:color="@color/green"></stroke>
            <size android:width="60dp" android:height="20dp"></size>

        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/secondary"></solid>
            <stroke android:width="1dp" android:color="@color/grey"></stroke>
            <corners android:radius="50dp"></corners>
            <size android:width="60dp" android:height="20dp"></size>
        </shape>
    </item>
</selector>