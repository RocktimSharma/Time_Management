<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/supernova"></solid>
            <corners android:radius="20dp" />
            <size android:width="60dp" android:height="20dp" />
        </shape>
    </item>

    <item android:state_checked="false">
        <shape android:shape="rectangle">

            <solid android:color="@color/secondaryBackgroundColor"></solid>
            <stroke android:width="1dp" android:color="@color/secondaryTextColor"></stroke>
            <corners android:radius="20dp" />
            <size android:width="60dp" android:height="20dp" />
        </shape>
    </item>
</selector>