<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/martinique"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/routine_bottom_sheet_dialog_warning_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_warning"
            android:drawablePadding="10dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:text="Warning"
            android:textColor="@color/sunglow" />

        <TextView
            android:id="@+id/routine_bottom_sheet_dialog_next_task_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/routine_bottom_sheet_dialog_warning_tv"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Next Task is from 08:23 Am"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/routine_bottom_sheet_dialog_quesition_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/routine_bottom_sheet_dialog_next_task_tv"
            android:fontFamily="@font/montserrat"
            android:text="Do you want to cancel your next task?"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/routine_bottom_sheet_dialog_quesition_tv"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/routine_bottom_sheet_dialog_yes_btn"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/button_gradient_2"
                android:text="Yes"
                android:textColor="@color/anakiwa"
                android:textSize="18sp"
                android:typeface="monospace"
                app:backgroundTint="@null"
                app:cornerRadius="10dp" />

            <Button
                android:id="@+id/routine_bottom_sheet_dialog_no_btn"
                style="@android:style/Widget.DeviceDefault.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@drawable/rouned_outlined_ectangle"
                android:text="No"
                android:textColor="@color/anakiwa"
                android:textSize="18sp"
                android:typeface="monospace"
                app:backgroundTint="@null"
                app:cornerRadius="10dp" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>