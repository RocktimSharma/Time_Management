<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Second">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

    </FrameLayout>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/primaryBackgroundColor"
        app:mbn_backgroundBottomColor="@color/primaryBackgroundColor"
        app:mbn_circleColor="@color/bright_sun"
        app:mbn_countBackgroundColor="@color/sunglow"
        app:mbn_defaultIconColor="@color/boulder"
        app:mbn_selectedIconColor="@color/black"
        app:mbn_shadowColor="@color/secondaryBackgroundColor">

    </com.etebarian.meowbottomnavigation.MeowBottomNavigation>


